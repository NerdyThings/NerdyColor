{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2015",
        "module": "amd",
        // "moduleResolution": "node",
        "isolatedModules": false,
        "pretty": true,
        "declaration": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "noImplicitThis": false,
        "noImplicitAny": true,
        "allowJs": false,
        "allowUnusedLabels": true,
        // "sourceMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "lib": [
            "es2017",
            "es2016",
            "es2015",
            "es2015.proxy",
            "es6",
            "dom"
        ],
        "typeRoots": [ /* "../types" */]
        // "outFile": "./dist/nerdy-color.js" // Moved to build task runner
    },
    "include": [
        "./typings/index.d.ts",
        "./lib/types.d.ts",
        "./lib/decorators.ts",
        "*.ts"
    ],
    "exclude": [
        "./test/",
        "./beta/",
        "node_modules",
        "typings"
    ]
}